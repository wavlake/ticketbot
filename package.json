{
  "name": "ticketbot",
  "version": "1.0.0",
  "description": "A basic ticketing service using Nostr and Lightning by Wavlake",
  "main": "index.ts",
  "scripts": {
    "start": "node -r tsconfig-paths/register -r ts-node/register ./index.ts",
    "dev": "NODE_ENV=dev DEBUG=express:router concurrently \"npx tsc --watch\" \"nodemon dist/index.js --watch\"",
    "build": "npx tsc"
  },
  "author": "Michael Rhee",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.3",
    "express": "^4.19.2",
    "helmet": "^3.22.0",
    "loglevel": "^1.7.1",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "concurrently": "^8.1.0",
    "jest": "^29.6.4",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "_comment": "config via https://stackoverflow.com/a/58226283",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./index.ts",
    "ext": "ts, js"
  }
}
